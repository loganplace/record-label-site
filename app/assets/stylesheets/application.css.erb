 /* 
 COLOR PALETTE
 
 #C4BCA7 (Dun)
 #1B2D2A (Gunmetal grey) 
 #78290F (Sienna)
 #71677C (Chinese Violet)
 
 */
body {
    background-image: url(<%= image_path('background.png') %>);
    background-size: cover;
    background-repeat: no-repeat;
}

.container {
    background-color: #989797;
}

 * {
    font-family: Helvetica;
    color: #c4bca7;
}


nav li {
    margin-left: 50px;
    display: inline-block;
    padding-top: 2%;
}

nav a {
    text-decoration: none;
    text-transform: lowercase;
    font-size: 24px;
}

div.title {
    padding-top:3%;
    font-size: 48px;
    text-align: center;
}

.navbar-logo {
    vertical-align: middle;
}

div.homepage-release-cards {
    margin-left: 4%;
    margin-top:1%;
    justify-content: center;
    text-align: right;
    width: 20%;
    display: inline-block;
}
